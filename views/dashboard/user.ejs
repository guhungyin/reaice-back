<div class="modal fade" id="editModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="addModalLabel">編輯使用者</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <!-- 使用者名稱 -->
                    <div class="row mb-3">
                        <p>使用者名稱</p>
                        <div class="col">
                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="請輸入使用者名稱" value="admin">
                        </div>
                    </div>
                    <!-- 使用者密碼 -->
                    <div class="row mb-3">
                        <div class="col">
                            <p>使用者密碼</p>
                            <input type="password" class="form-control" id="formGroupExampleInput" placeholder="請輸入使用者密碼" value="admin">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <p>再次確認密碼</p>
                            <input type="password" class="form-control" id="formGroupExampleInput" placeholder="再次輸入密碼" value="admin">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">儲存</button>
            </div>
        </div>
    </div>
</div>
